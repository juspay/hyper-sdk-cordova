<?xml version='1.0' encoding='utf-8'?>
<plugin id="hyper-sdk-cordova" version="2.0.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>hyper-sdk-cordova-plugin</name>
    <js-module name="hyper-sdk-cordova-plugin" src="www/hyper-sdk-cordova-plugin.js">
        <clobbers target="cordova.plugins.hyper-sdk-cordova-plugin" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="hyper-sdk-cordova-plugin">
                <param name="android-package" value="hyper-sdk-cordova.hyper-sdk-cordova-plugin" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml" />
        <source-file src="src/android/hyper-sdk-cordova-plugin.java" target-dir="src/hyper-sdk-cordova/hyper-sdk-cordova-plugin" />
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="hyper-sdk-cordova-plugin">
                <param name="ios-package" value="hyper-sdk-cordova-plugin" />
            </feature>
        </config-file>
        <source-file src="src/ios/hyper-sdk-cordova-plugin.m" />
    </platform>
</plugin>